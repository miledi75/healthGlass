<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mileto.healthglass">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ScanActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PatientInfoActivity" />
        <activity android:name=".PatientParametersActivity" />
        <activity android:name=".ViewPatientProtocolPerformedActivity" />
        <activity android:name=".ViewPatientProtocolToDoActivity" />
        <activity android:name=".ViewImageFullsizeActivity" />
        <activity android:name=".CommentsActivity" />
        <activity android:name=".RecordCommentActivity" />
        <activity android:name=".ListenCommentActivity" />
        <activity android:name=".PicturesActivity" />
        <activity android:name=".ExtraParametersActivity"/>
    </application>

</manifest>